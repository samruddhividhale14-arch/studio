rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /users/{userId}/farmers/{farmerId} {
      // A user can read their own farmer document
      allow get: if isSignedIn() && isOwner(userId);

      // A user can query their own farmer documents
      allow list: if isSignedIn() && isOwner(userId);
      
      // A user can create their own farmer document.
      // The farmerId must match their user ID.
      // The document ID must match the id field in the document data.
      allow create: if isSignedIn() 
                    && isOwner(userId) 
                    && farmerId == userId
                    && request.resource.data.id == userId;

      // A user can update their own farmer document.
      // The user cannot change the document's id.
      allow update: if isSignedIn() 
                    && isOwner(userId)
                    && request.resource.data.id == resource.data.id;

      // A user can delete their own farmer document.
      allow delete: if isSignedIn() && isOwner(userId);
    }
  }
}
